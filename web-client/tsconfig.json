{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "scripthost", "dom", "es2015"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.test.tsx",
    "node_modules",
    "../node_modules",
    "../common/node_modules",
    "dist"
  ]
}
